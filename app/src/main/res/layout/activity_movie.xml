<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moviebkg"
    tools:context=".ui.activities.MovieActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linear_layout_ads">
            <ImageView
                android:id="@+id/image_view_activity_movie_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:scaleType="centerCrop" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/relative_layout_movie_activity_controller"
                android:background="#d6000000">
                <LinearLayout
                    android:id="@+id/competitionTxtLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_marginTop="70dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/leaderboard_blue_gradient"
                        android:layout_height="45dp">
                        <TextView
                            android:id="@+id/competitionTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            android:fontFamily="@font/futur"
                            android:text=""
                            />




                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/totalVotesLL"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:gravity="center"
                        android:background="#00008b"
                        android:layout_height="40dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_weight="15"
                            android:visibility="visible"
                            android:fontFamily="@font/helvetica"
                            android:text="@string/rank" />

                        <TextView
                            android:id="@+id/rankNumberTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_weight="10"
                            android:visibility="visible"
                            android:fontFamily="@font/futura_bold"
                            android:text="" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_weight="60"
                            android:textAlignment="textEnd"
                            android:fontFamily="@font/helvetica"
                            android:text="Total Votes:" />
                        <TextView
                            android:id="@+id/totalVotesTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_weight="15"
                            android:textAlignment="center"
                            android:fontFamily="@font/futura_bold"
                            android:text="" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="580dp"
                        android:visibility="visible">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/imgCardView"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_marginTop="-10dp"
                            app:cardBackgroundColor="#ff1d1c22"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="0dp">


                                <ImageView
                                    android:id="@+id/image_view_activity_movie_cover_blur"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    android:scaleType="centerCrop"

                                    android:src="@drawable/placeholder" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"

                                    android:src="@drawable/movie_detail_bkg" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="180dp"
                                    android:layout_height="260dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:elevation="10dp"
                                    app:cardCornerRadius="25dp">

                                    <ImageView
                                        android:id="@+id/image_view_activity_movie_cover"
                                        android:layout_width="185dp"
                                        android:layout_height="260dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/placeholder" />
                                </androidx.cardview.widget.CardView>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/text_view_activity_movie_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgCardView"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/helvetica_bold"
                            android:padding="2dp"
                            android:shadowColor="@color/black"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <!--  <com.google.android.material.floatingactionbutton.FloatingActionButton
                              android:id="@+id/floating_action_button_activity_movie_play"
                              android:layout_width="318dp"
                              android:layout_height="wrap_content"
                              android:layout_alignParentRight="true"
                              android:layout_alignParentBottom="true"
                              android:layout_marginStart="15dp"
                              android:layout_marginTop="15dp"
                              android:layout_marginEnd="15dp"
                              android:layout_marginBottom="15dp"
                              android:visibility="gone"
                              android:elevation="10dp"
                              android:outlineAmbientShadowColor="@color/colorAccent"
                              android:outlineSpotShadowColor="@color/colorAccent"
                              android:tint="@color/white"
                              app:elevation="10dp"
                              app:rippleColor="@color/colorAccent"
                              app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlayExtended"
                              app:srcCompat="@drawable/ic_play" />-->

                        <LinearLayout
                            android:id="@+id/movie_genreLL"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/text_view_activity_movie_title"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycle_view_activity_movie_genres"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/text_view_activity_movie_year"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:visibility="visible" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/viewLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/movie_genreLL"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="15sp"
                                android:layout_height="15sp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_eye" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/futura_bold"
                                android:text="Views: "
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/movie_viewTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/futura_bold"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/playVideo"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_below="@+id/viewLL"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/custom_red_bkg_round_edge"
                            android:elevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/playIV"
                                    android:layout_width="20dp"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_play"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_toRightOf="@+id/playIV"
                                    android:text="Play Movie"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/voteRL"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_below="@+id/playVideo"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="100dp"
                            android:background="@drawable/custom_blue_bkg_round_edge"
                            android:elevation="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/voteTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/playIV"
                                    android:text="Vote"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/voteNumberTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/voteTV"
                                    android:text="1"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:visibility="gone" />
                            </LinearLayout>


                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/linear_layout_activity_movie_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/voteRL"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="7dp"
                            android:background="@drawable/border_right"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <androidx.appcompat.widget.AppCompatRatingBar
                                android:id="@+id/rating_bar_activity_movie_rating"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/relative_layout_user"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="7dp"
                                android:elevation="20dp"
                                android:isIndicator="true"
                                android:rating="3.5"
                                android:theme="@style/MyRatingBar" />
                        </LinearLayout>


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/text_view_activity_movie_sub_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Jocker"
                            android:textColor="@color/colorAccent"
                            android:textSize="19dp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/text_view_activity_movie_classification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_right"
                                android:paddingLeft="7dp"
                                android:paddingRight="7dp"
                                android:textColor="@color/white_text"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/text_view_activity_movie_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:background="@drawable/border_right"
                                android:paddingLeft="7dp"
                                android:paddingRight="7dp"
                                android:text="2h22min"
                                android:textColor="@color/white_text"
                                android:visibility="gone" />


                            <LinearLayout
                                android:id="@+id/linear_layout_activity_movie_imdb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/imdb" />

                                <TextView
                                    android:id="@+id/text_view_activity_movie_imdb_rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="7dp"
                                    android:paddingRight="7dp"
                                    android:text="7.9/10"
                                    android:textColor="@color/white_text" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_view_activity_movie_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:paddingBottom="0dp"
                            android:textColor="@color/white_text"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingTop="3dp"
                        android:paddingRight="3dp">

                        <LinearLayout
                            android:id="@+id/linear_layout_movie_activity_trailer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/linear_layout_movie_activity_trailer_clicked"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:padding="10dp"
                                    app:srcCompat="@drawable/ic_movie"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:text="Trailer"
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/linear_layout_movie_activity_share"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:padding="10dp"
                                    app:srcCompat="@drawable/ic_share"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:text="Share"
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/linear_layout_activity_movie_my_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">

                                <ImageView
                                    android:id="@+id/image_view_activity_movie_my_list"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:padding="7dp"
                                    app:srcCompat="@drawable/ic_check"
                                    app:tint="@color/white" />

                                <ProgressBar
                                    android:id="@+id/progress_bar_activity_movie_my_list"
                                    style="?android:attr/progressBarStyleLarge"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:padding="7dp"
                                    android:visibility="gone" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:text="My List"
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/linear_layout_movie_activity_rate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:padding="10dp"
                                    app:srcCompat="@drawable/ic_thumb_up"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:text="Rate"
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:visibility="gone"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/linear_layout_movie_activity_download"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp">


                                <ImageView
                                    android:id="@+id/image_view_wallpaper_activity_fav"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:padding="7dp"
                                    app:srcCompat="@drawable/ic_file_download"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:text="Download"
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_layout_activity_movie_cast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Cast"
                                android:textColor="@color/colorAccent"
                                android:textSize="19dp"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:background="@color/colorAccent" />
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycle_view_activity_activity_movie_cast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_layout_activity_movie_more_movies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="@string/for_you"
                                android:textColor="@color/colorAccent"
                                android:textSize="19dp"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:background="@color/colorAccent" />
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycle_view_activity_activity_movie_more_movies"
                            android:layout_width="match_parent"
                            android:layout_height="182dp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_gradient" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:theme="@style/CustomActionBar" />

            <RelativeLayout
                android:id="@+id/relative_layout_movie_activity_controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/dark_gray">

                <fragment
                    android:id="@+id/caster_mini_controller"
                    class="com.google.android.gms.cast.framework.media.widget.MiniControllerFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:castSubtitleTextAppearance="@style/MiniControllerTextAppearace"
                    app:castTitleTextAppearance="@style/MiniControllerTextAppearace"
                    app:layout_insetEdge="bottom" />
            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_action_button_activity_movie_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/relative_layout_movie_activity_controller"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:elevation="10dp"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent"
                android:tint="@color/white"
                app:elevation="10dp"
                app:rippleColor="@color/colorAccent"
                app:srcCompat="@drawable/ic_comment" />

            <RelativeLayout
                android:id="@+id/relative_layout_subtitles_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="30dp"
                android:background="@drawable/bg_loading_subtitles_accent"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_subtitles"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="@string/loading_subtitles"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_layout_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"></LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>