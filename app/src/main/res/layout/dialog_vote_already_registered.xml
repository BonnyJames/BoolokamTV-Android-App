<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bkg_blue_vote_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOUR VOTE HAS ALREADY\n BEEN SUBMITTED"
        android:lineHeight="20dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:fontFamily="@font/helvetica_bold"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/helvetica"
        android:text="Your next available vote is tomorrow" />

    <LinearLayout
        android:background="@drawable/bkg_white_vote_dialog"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_marginBottom="-30dp"
            android:layout_marginTop="-20dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/sendit" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="23sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:fontFamily="@font/helvetica_bold"
            android:textAllCaps="true"
            android:lineHeight="25dp"
            android:text="SHARE THIS MOVIE,\nGET MORE PEOPLE VOTING" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/helvetica"
            android:text="By sharing this movie with your\n Friends &amp; Family to vote will\n increase the leaderboard vote score" />

        <RelativeLayout
            android:id="@+id/share_btn_rl"
            android:background="@drawable/btn_share_to_get_vote_blue_bkg"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/share_white" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/imageView5"
                android:fontFamily="@font/helvetica_bold"
                android:text="@string/share_to_get_more_votes"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>